.container
.container
  .row.user-box
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      h3.text-center Edit Profile
      hr.colorgraph
      form#profile(action='#', method='post')
        fieldset
          .fields
            img#avatar(src=user.avatar)
          .fields
            input#name(type='text', placeholder='Name', value=user.name, required, autofocus)
          .fields
            input#pass(type='password', placeholder='Password', required)
          .fields
            input#_pass(type='password', placeholder='Password', required)
          .fields
            input#email(type='text', placeholder='e-mail', value=user.email)
          .fields
            input#address(type='text', placeholder='Address', value=user.address)
          .fields
            input#zipcode(type='text', placeholder='zipcode', value=user.zipcode)
          .fields
            input#phone(type='text', placeholder='Phone #', value=user.phone)
          .fields
            input#city(type='text', placeholder='City', value=user.city)
          .fields
            input#state(type='text', placeholder='State', value=user.state)
          .fields
            input#avatar(type='text', placeholder='Avatar', value=user.avatar)
          .fields
            .col-sm-6
              button.btn.btn-md.btn-primary.btn-block(type='reset')
                i.fa.fa-times
                |  Cancel
            .col-sm-6
              button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
                i.fa.fa-check
                |  OK
