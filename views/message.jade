.container
.container
  .row.user-box
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      h3.text-center Send Message
      hr.colorgraph
      form#message(action='#', method='post')
        fieldset
          .fields
            textarea#name(rows='5', placeholder='Type your message here', required, autofocus)
          .fields
            .col-sm-6
              button.btn.btn-md.btn-primary.btn-block(type='reset')
                i.fa.fa-times
                |  Cancel
            .col-sm-6
              button.btn.btn-md.btn-success.btn-block.confirm(type='submit')
                i.fa.fa-check
                |  Send
